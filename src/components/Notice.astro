---
const { title, day, Content } = Astro.props;
---
<section class="notice">
    <h2>{title}</h2>
    <p class="day">{day}</p>
    <Content />
</section>

<style>
    .notice {
        background-color: #fffde7;
        border: 1px solid #fbc02d;
        padding: 1rem;
        border-radius: 8px;
        margin: 1rem 0;
    }
    .notice h2 {
        margin: 0 0 0.25rem 0;
        font-size: 18px;
        font-weight: bold;
        color: #f57f17;
    }
    .notice .day {
        margin: 0 0 0.5rem 0;
        font-size: 12px;
        color: #555;
    }
    .notice :global(p) {
        font-size: 14px;
        color: #333;
        margin: 0;
    }
</style>